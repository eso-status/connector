{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "lib": [
      "ES2020"
    ],
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
